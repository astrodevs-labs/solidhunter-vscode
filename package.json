{
    "name": "solidhunter",
    "description": "A simple, fast and reliable solidity linter.",
    "author": "Astrodevs Labs",
    "license": "MIT",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/astrodevs-labs/solidhunter"
    },
    "publisher": "astrodevs-labs",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "activationEvents": [
        "onLanguage:sol",
        "onLanguage:solidity",
        "workspaceContains:**/.solidhunter.json",
        "workspaceContains:**/*.sol"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "solidhunter.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "solidhunter.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "sol",
                "aliases": [
                    "Solidity"
                ],
                "extensions": [
                    ".sol"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "mocha": "^9.2.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "ffi-napi": "^4.0.3",
        "ref-array-napi": "^1.2.2",
        "ref-napi": "^3.0.3",
        "ref-struct-napi": "^1.1.1"
    }
}
